{% extends "base.html.twig" %}

{% block pageTitle %}Les articles{% endblock %}

{% block body %}
  {% for article in articles %}
  <div class="card my-5">
    <h5 class="card-header">{{ article.title }}</h5>
    <div class="card-body">
      <h5 class="card-title"> L'auteur de l'article : {{ article.nameofauthor }}</h5>
      <p> Date : {{ article.datecreate|date("d/m/Y") }}</p>
      <p> N de vues : {{ article.numberview }}
      <p> Cat√©gorie : {{ article.nameofcategory|capitalize }}</p>
      <p class="card-text">{{ article.getShortedContent }} ...</p>
      <a href="{{ path('singleView', {'id': article.id})}}" class="btn btn-primary"> voir </a>
    </div>
  </div>
  {% endfor %}
{% endblock %}
